{
	"name": "talk",
	"version": "0.34.0",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"start": "tsx ./server/index.ts",
		"test": "vitest",
		"coverage": "vitest run --coverage",
		"test:run": "vitest run",
		"test:e2e": "playwright test",
		"test:ci": "CI=true npm run test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"prepare": "husky install",
		"typecheck": "tsc --noEmit",
		"typecheck:why": "tsc --noEmit --explainFiles > explainTypes.txt",
		"search-index": "tsx ./src/lib/docs/search_index.ts"
	},
	"prisma": {
		"seed": "tsx prisma/seed.ts"
	},
	"devDependencies": {
		"@playwright/test": "^1.32.1",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/adapter-node": "^1.2.3",
		"@sveltejs/kit": "^1.15.2",
		"@types/dom-speech-recognition": "^0.0.1",
		"@types/express": "^4.17.17",
		"@types/glob": "^8.1.0",
		"@types/imap-simple": "^4.2.5",
		"@types/markdown-it-link-attributes": "^3.0.1",
		"@types/morgan": "^1.9.4",
		"@types/nodemailer": "^6.4.7",
		"@types/nprogress": "^0.2.0",
		"@types/prettier": "^2.7.2",
		"@types/redis": "^4.0.11",
		"@types/uuid": "^9.0.1",
		"@typescript-eslint/eslint-plugin": "^5.57.0",
		"@typescript-eslint/parser": "^5.57.0",
		"@vite-pwa/sveltekit": "^0.2.1",
		"@vitest/coverage-c8": "^0.29.8",
		"autoprefixer": "^10.4.14",
		"dotenv": "^16.0.3",
		"eslint": "^8.37.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^8.0.3",
		"imap-simple": "^5.1.0",
		"lint-staged": "^13.2.0",
		"postcss": "^8.4.23",
		"prettier": "^2.8.7",
		"prettier-plugin-svelte": "^2.10.0",
		"prisma": "^4.12.0",
		"stylelint": "^15.3.0",
		"stylelint-config-standard": "^31.0.0",
		"stylelint-config-standard-scss": "^7.0.1",
		"svelte": "^3.57.0",
		"svelte-check": "^3.1.4",
		"svelte-preprocess": "^5.0.3",
		"tailwindcss": "^3.3.1",
		"tailwindcss-dir": "^4.0.0",
		"tslib": "^2.5.0",
		"tsx": "^3.12.6",
		"typescript": "^5.0.2",
		"vite": "^4.2.1",
		"vitest": "^0.29.8"
	},
	"type": "module",
	"dependencies": {
		"@google-cloud/text-to-speech": "^4.2.1",
		"@google-cloud/translate": "^7.2.0",
		"@prisma/client": "^4.12.0",
		"@socket.io/cluster-adapter": "^0.2.2",
		"@socket.io/pm2": "^5.2.2",
		"@socket.io/redis-adapter": "^8.1.0",
		"@socket.io/sticky": "^1.0.3",
		"deepl-node": "^1.8.0",
		"express": "^4.18.2",
		"glob": "^10.2.2",
		"gray-matter": "^4.0.3",
		"markdown-it-link-attributes": "^4.0.1",
		"microsoft-cognitiveservices-speech-sdk": "^1.26.0",
		"minisearch": "^6.0.1",
		"morgan": "^1.10.0",
		"nodemailer": "^6.9.1",
		"nprogress": "^0.2.0",
		"redis": "^4.6.5",
		"socket.io": "^4.6.1",
		"socket.io-client": "^4.6.1",
		"svelte-i18n": "^3.6.0",
		"uuid": "^9.0.0",
		"winston": "^3.8.2",
		"winston-console-format": "^1.0.8",
		"winston-daily-rotate-file": "^4.7.1"
	},
	"lint-staged": {
		"*.{js,ts,svelte}": "eslint --cache --fix",
		"*.css": "stylelint --fix",
		"*.{js,css,md,ts,svelte,css,scss,json}": "prettier --write"
	}
}
