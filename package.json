{
	"name": "talk",
	"version": "0.61.0",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"start": "tsx ./server/index.ts",
		"test": "vitest",
		"coverage": "vitest run --coverage",
		"test:run": "vitest run",
		"test:e2e": "playwright test",
		"test:ci": "CI=true npm run test",
		"test:e2e:ci": "CI=true npm run test:e2e",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint .",
		"lint-prettier": "eslint . && prettier --check .",
		"format": "eslint . --fix",
		"prepare": "husky install",
		"typecheck": "tsc --noEmit",
		"typecheck:why": "tsc --noEmit --explainFiles > explainTypes.txt",
		"branch": "git checkout main && git pull && tsx ./src/lib/git/create_git_branch.ts"
	},
	"prisma": {
		"seed": "tsx prisma/seed.ts"
	},
	"devDependencies": {
		"@playwright/test": "^1.35.1",
		"@sveltejs/adapter-node": "^1.2.4",
		"@sveltejs/kit": "^1.20.5",
		"@types/express": "^4.17.17",
		"@types/glob": "^8.1.0",
		"@types/imap-simple": "^4.2.6",
		"@types/morgan": "^1.9.4",
		"@types/nodemailer": "^6.4.8",
		"@types/nprogress": "^0.2.0",
		"@types/prettier": "^2.7.3",
		"@types/redis": "^4.0.11",
		"@types/uuid": "^9.0.2",
		"@types/vivus": "^0.4.4",
		"@typescript-eslint/eslint-plugin": "^6.5.0",
		"@typescript-eslint/parser": "^6.5.0",
		"@vitest/coverage-c8": "^0.32.2",
		"autoprefixer": "^10.4.14",
		"dotenv": "^16.3.1",
		"eslint": "^8.48.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prettier": "^5.0.0",
		"eslint-plugin-svelte": "^2.33.0",
		"husky": "^8.0.3",
		"imap-simple": "^5.1.0",
		"lint-staged": "^13.2.2",
		"postcss": "^8.4.24",
		"prettier": "^3.0.3",
		"prettier-plugin-svelte": "^3.0.3",
		"prettier-plugin-tailwindcss": "^0.5.3",
		"prisma": "^4.16.1",
		"stylelint": "^15.10.1",
		"stylelint-config-standard": "^33.0.0",
		"stylelint-config-standard-scss": "^9.0.0",
		"svelte": "^4.0.0",
		"svelte-check": "^3.4.4",
		"svelte-preprocess": "^5.0.4",
		"tailwindcss": "^3.3.2",
		"tailwindcss-dir": "^4.0.0",
		"tslib": "^2.6.0",
		"tsx": "^3.12.7",
		"typescript": "^5.1.3",
		"user-agent-data-types": "^0.3.1",
		"vite": "^4.3.9",
		"vitest": "^0.32.2"
	},
	"type": "module",
	"dependencies": {
		"@google-cloud/text-to-speech": "^4.2.2",
		"@google-cloud/translate": "^7.2.1",
		"@prisma/client": "^4.16.1",
		"@socket.io/redis-adapter": "^8.2.1",
		"country-flag-emoji-polyfill": "^0.1.4",
		"deepl-node": "^1.10.2",
		"express": "^4.18.2",
		"gray-matter": "^4.0.3",
		"microsoft-cognitiveservices-speech-sdk": "^1.29.0",
		"morgan": "^1.10.0",
		"nodemailer": "^6.9.3",
		"nprogress": "^0.2.0",
		"redis": "^4.6.7",
		"socket.io": "^4.7.0",
		"socket.io-client": "^4.7.0",
		"svelte-i18n": "^3.6.0",
		"svelte-local-storage-store": "^0.5.0",
		"svelte-meta-tags": "^2.8.0",
		"uuid": "^9.0.0",
		"vivus": "^0.4.6",
		"winston": "^3.9.0",
		"winston-console-format": "^1.0.8",
		"winston-daily-rotate-file": "^4.7.1"
	},
	"lint-staged": {
		"*.{js,ts,svelte}": "eslint --cache --fix",
		"*.css": "stylelint --fix",
		"*.{js,css,md,ts,svelte,css,scss,json}": "prettier --write"
	}
}
